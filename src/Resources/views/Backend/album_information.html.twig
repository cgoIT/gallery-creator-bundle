{% if restricted %}
    <div class="widget long album_infos">
        <p>&nbsp;</p>
        <table cellpadding="0" cellspacing="0" width="100%" summary="">
            <tr class="odd">
                <td style="width:25%"><strong>{{ trans.album_id }}: </strong></td>
                <td>{{ model.id }}</td>
            </tr>
        </table>
    </div>
{% else %}
    <div class="widget long album_infos">
        <p>&nbsp;</p>
        <table cellpadding="0" cellspacing="0" width="100%" summary="">
            <tr class="odd">
                <td style="width:25%"><strong>{{ trans.album_id }}: </strong></td>
                <td>{{ model.id }}</td>
            </tr>
            <tr class="even">
                <td><strong>{{ trans.album_date }}: </strong></td>
                <td>{{ model.date_formatted }}</td>
            </tr>
            <tr class="odd">
                <td><strong>{{ trans.album_owners_name }}: </strong></td>
                <td>{{ model.ownersName }}</td>
            </tr>
            <tr class="even">
                <td><strong>{{ trans.album_name }}: </strong></td>
                <td>{{ model.name }}</td>
            </tr>
            <tr class="odd">
                <td><strong>{{ trans.album_comment|raw }}: </strong></td>
                <td>{{ model.comment }}</td>
            </tr>
            <tr class="even">
                <td><strong>{{ trans.album_thumb }}: </strong></td>
                <td>{{ model.thumb }}</td>
            </tr>
        </table>
    </div>
{% endif %}
